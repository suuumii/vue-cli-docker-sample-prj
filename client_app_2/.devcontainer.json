{
    // コンテナの名前
    "name": "dev client container",

    // Docker Composeの設定ファイルパス
    "dockerComposeFile": [
        "../docker-compose.yml"
    ],

    // コンテナのサービス名
    "service": "client",

    // コンテナ内でのユーザー
    // "remoteUser": "docker",

    // VSCodeで開くコンテナ内のパス
    "workspaceFolder": "/app/client_app_2/",

    // コンテナ内で使用する拡張機能
    "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "octref.vetur"
    ],

    "shutdownAction": "none"
}